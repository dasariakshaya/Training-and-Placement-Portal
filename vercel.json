{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)", 
      "dest": "backend/server.js"
    },
    {
      "source": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
